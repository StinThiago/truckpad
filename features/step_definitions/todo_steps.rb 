
Given('I am on the Todo list page') do
	visit('http://localhost:3000')
end

Given(/^I will click at Nova lista$/) do
	click_link('Nova lista')
end

Given(/^I fill in "([^"]*)" with "([^"]*)"$/) do |arg1, arg2|
	fill_in(arg1, :with => arg2)  
end

When(/^I press "([^"]*)" button$/) do |arg1|
	click_button(arg1)
end

Then(/^page should have notice message "([^"]*)"$/) do |arg1|
  find('notice').text == arg1
end



<%= form_for(@todo_list) do |f| %>
  <% if @todo_list.errors.any? %>
    <div id="error_explanation">
      <h2 class="todo_list_title"><%= pluralize(@todo_list.errors.count, "error") %>Proibido salvar esta lista: </h2>

      <ul>
      <% @todo_list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Descrição" %><br>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label "Data de Vencimento" %><br>
    <%= f.date_select :due_date %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Criar/Alterar" %>
  </div>
<% end %>

<h2 class="todo_list_title">Inscrever-se</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label 'Email' %><br />
  <%= f.email_field :email, autofocus: true %></div>

  <div><%= f.label 'Senha' %><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <div><%= f.label 'ConfirmaÃ§Ã£o Senha' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %></div>

	<%= f.fields_for :profile do |profile_form| %>
	  <h2 class="todo_list_title"><%= profile_form.label 'Nome'  %></h2>
	  <p><%= profile_form.text_field :first_name %></p>

	  <h2 class="todo_list_title"><%= profile_form.label 'Sobrenome' %></h2>
	  <p><%= profile_form.text_field :last_name %></p>
	<% end %>

  <div><%= f.submit "Inscrever-se" %></div>
<% end %>

